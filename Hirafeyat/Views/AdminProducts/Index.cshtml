@using X.PagedList
@model IPagedList<Hirafeyat.Models.Product>

@{
    ViewBag.Title = "Manage Products";
    int pageNumber = ViewBag.PageNumber;
    int pageSize = ViewBag.PageSize;
    int totalProducts = ViewBag.TotalProducts;
    int totalPages = (int)Math.Ceiling((double)totalProducts / pageSize);
    Layout = "~/Views/AdminProducts/_DefaultLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<partial name="~/Views/AdminProducts/_NavPartial.cshtml"/> 

<style>
    .action-btns {
        text-align: center; 
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 80px;
        margin: 2px;
        padding: 0.25rem 0.5rem;
        font-size: 0.8rem;
    }

        .btn-action i {
            margin-right: 5px;
        }
</style>

<div class="container-fluid">
    <div class="py-3 px-xl-5">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Seller</th>
                    <th class="text-center">Actions</th> <!-- توسيط عنوان العمود -->
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.Price.ToString("N2")</td>
                        <td>@product.Seller?.FullName</td>
                        <td class="action-btns">
                            <div class="d-flex justify-content-center">
                                <!-- توسيط الأزرار باستخدام flexbox -->
                                <a class="btn btn-info btn-action" href="@Url.Action("Details", new { id = product.Id })">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a class="btn btn-warning btn-action" href="@Url.Action("Edit", new { id = product.Id })">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-action" href="@Url.Action("Delete", new { id = product.Id })">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="py-3 px-xl-5">
        <ul class="pagination">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == pageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = pageSize, sellerId = ViewBag.SellerId })">@i</a>
                </li>
            }
        </ul>
    </div>
</div>