@model Hirafeyat.Models.Product

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/AdminProducts/_DefaultLayout.cshtml";
}

<partial name="~/Views/AdminProducts/_TopPartial.cshtml" />

<div class="container-fluid">
	<div class="row justify-content-center px-xl-5 pb-5">
		<!-- Header Section -->
		<div class="container-fluid bg-secondary mb-5">
			<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100px">
				<h1 class="font-weight-semi-bold text-uppercase mb-3">Product Detail</h1>
				<div class="d-inline-flex">
					<p class="m-0"><a asp-action="Index">Back to List</a></p>
					<p class="m-0 px-2">-</p>
					<p class="m-0">Product Detail</p>
				</div>
			</div>
		</div>

		<!-- Product Detail Section -->
		<!-- Product Image -->
		<div class="col-md-5 mb-4">
			<div class="bg-light p-3 rounded shadow-sm">
				<img class="img-fluid rounded" src="@Model.ImageUrl" alt="Product Image">
			</div>
		</div>

		<!-- Product Info -->
		<div class="col-md-7">
			<div class="bg-light p-4 rounded shadow-sm">
				<dl class="row">
					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Title) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Title) </dd>

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Description) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Description) </dd>

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Price) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Price) </dd>

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.CreatedAt) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.CreatedAt) </dd>

					<dt class="col-sm-2">Category</dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Category.Name) </dd>

					<dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Seller.FullName) </dt>
					<dd class="col-sm-10"> @Html.DisplayFor(model => model.Seller.FullName) </dd>

					<dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsApproved)</dt>
					<dd class="col-sm-10">@Html.DisplayFor(model => model.IsApproved)</dd>
				</dl>

				<div class="mt-3">
					@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
				</div>
			</div>
		</div>
	</div>
</div>
